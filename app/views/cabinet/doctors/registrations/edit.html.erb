<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="<%= header_bg_class(:doctor) %> px-8 py-6">
        <h1 class="text-2xl font-bold text-gray-700 flex items-center">
          <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <%= t('views.devise.registrations.edit.title', default: 'Редактирование профиля') %>
        </h1>
        <p class="text-gray-500 text-opacity-90 mt-2">
          <%= t('views.devise.registrations.edit.subtitle', default: 'Обновите информацию вашего аккаунта') %>
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-8 space-y-6" }) do |f| %>
        <%= render "cabinet/doctors/shared/error_messages", resource: resource %>

        <div class="border-b border-gray-200 pb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 <%= icon_bg_class(:doctor) %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            Личная информация
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div>
              <%= f.label :last_name, 'Фамилия', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :last_name, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :first_name, 'Имя', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :first_name, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :second_name, 'Отчество', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :second_name, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
            <div>
              <%= f.label :email, 'Email', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.email_field :email, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :doctor_identifier, 'Идентификатор врача', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :doctor_identifier, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
          </div>
        </div>

        <div class="border-b border-gray-200 pb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 <%= icon_bg_class(:doctor) %>" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6 2a1 1 0 011 1v6a5 5 0 005 5 5 5 0 005-5V3a1 1 0 112 0v6a7 7 0 01-7 7v2a3 3 0 106 0h2a5 5 0 11-10 0v-2a7 7 0 01-7-7V3a1 1 0 011-1z"/>
          </svg>
            Профессиональная информация
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :department, 'Отделение', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :department, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :specialization, 'Специализация', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :specialization, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :clinic, 'Клиника', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :clinic, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :date_of_employment, 'Дата приема на работу', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.date_field :date_of_employment, class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :main_doctor_id, 'Главный врач', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.collection_select :main_doctor_id, MainDoctor.all, :id, ->(md) { "#{md.last_name} #{md.first_name}" }, 
                  { include_blank: "Не выбран" }, 
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
          </div>
        </div>

        <div class="border-b border-gray-200 pb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 <%= icon_bg_class(:doctor) %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            Смена пароля
          </h2>
          <p class="text-sm text-gray-600 mb-4">Оставьте поля пустыми, если не хотите менять пароль</p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :password, 'Новый пароль', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
            <div>
              <%= f.label :password_confirmation, 'Подтверждение пароля', class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg #{input_focus_class(:doctor)} sm:text-sm" %>
            </div>
          </div>
        </div>

        <div class="bg-amber-50 rounded-lg p-4 border border-amber-200">
          <h3 class="text-sm font-semibold text-amber-900 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            Подтверждение изменений
          </h3>
          <%= f.label :current_password, 'Текущий пароль', class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 sm:text-sm" %>
          <p class="mt-2 text-xs text-amber-700">Введите текущий пароль для подтверждения изменений</p>
        </div>

        <div class="flex items-center justify-between pt-4">
          <%= link_to "Назад", cabinet_doctors_dashboard_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
          <%= f.submit 'Сохранить изменения', class: "#{button_class(:doctor)} ml-2" %>
        </div>
      <% end %>

      <div class="bg-green-50 border-t border-green-200 px-8 py-6">
        <h3 class="text-lg font-semibold text-red-900 mb-2">Удаление аккаунта</h3>
        <p class="text-sm text-red-700 mb-4">После удаления аккаунта все данные будут потеряны безвозвратно</p>
        <%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { turbo_confirm: "Вы уверены?" }, method: :delete, class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700" %>
      </div>
    </div>
  </div>
</div>
