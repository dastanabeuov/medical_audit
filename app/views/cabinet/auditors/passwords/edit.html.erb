<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 sm:px-6 lg:px-8 py-12">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <div class="<%= icon_bg_class(:auditor) %> w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
          <%= scope_icon_svg(:auditor) %>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          <%= t('devise.passwords.edit.title', default: 'Новый пароль') %>
        </h2>
        <p class="text-sm text-gray-600">
          <%= t('devise.passwords.edit.subtitle', default: 'Введите новый пароль для вашего аккаунта') %>
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
        <%= render "cabinet/auditors/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, t('views.devise.sessions.password', default: 'Пароль'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
              placeholder: "••••••••" %>
          <% if @minimum_password_length %>
            <p class="mt-2 text-xs text-gray-500 flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <%= t('views.devise.registrations.password_hint', count: @minimum_password_length, default: "Минимум %{count} символов") %>
            </p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, t('views.devise.registrations.password_confirmation', default: 'Подтверждение пароля'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
              placeholder: "••••••••" %>
        </div>

        <div class="pt-2">
          <%= f.submit t('devise.passwords.edit.submit', default: 'Изменить пароль'), class: button_class(:auditor) %>
        </div>
      <% end %>

      <%= render "cabinet/auditors/shared/links" %>
    </div>

    <p class="text-center text-xs text-gray-500 mt-4">
      <%= t('views.devise.footer', default: '© 2025 Medical Audit System') %>
    </p>
  </div>
</div>
