<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <div class="<%= icon_bg_class(:auditor) %> w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
          <%= scope_icon_svg(:auditor) %>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          <%= t('views.devise.sessions.title.auditor') %>
        </h2>
        <p class="text-sm text-gray-600">
          <%= t('views.devise.sessions.subtitle', default: 'Войдите в систему для продолжения') %>
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "cabinet/auditors/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, t('views.devise.sessions.email'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
              placeholder: "name@example.com" %>
        </div>

        <div>
          <%= f.label :password, t('views.devise.sessions.password'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
              placeholder: "••••••••" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: checkbox_class(:auditor) %>
              <%= f.label :remember_me, t('views.devise.sessions.remember_me'), class: "ml-2 block text-sm text-gray-700" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit t('views.devise.sessions.submit'), class: button_class(:auditor) %>
        </div>
      <% end %>

      <%= render "cabinet/auditors/shared/links" %>
    </div>

    <p class="text-center text-xs text-gray-500 mt-4">
      <%= t('views.devise.footer', default: '© 2025 Medical Audit System') %>
    </p>
  </div>
</div>
