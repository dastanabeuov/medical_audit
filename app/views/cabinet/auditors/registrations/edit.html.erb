<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="<%= header_bg_class(:auditor) %> px-8 py-6">
        <h1 class="text-2xl font-bold text-gray-700 flex items-center">
          <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <%= t('views.devise.registrations.edit.title', default: 'Редактирование профиля') %>
        </h1>
        <p class="text-gray-500 text-opacity-90 mt-2">
          <%= t('views.devise.registrations.edit.subtitle', default: 'Обновите информацию вашего аккаунта') %>
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-8 space-y-6" }) do |f| %>
        <%= render "cabinet/auditors/shared/error_messages", resource: resource %>

        <!-- Personal Information Section -->
        <div class="border-b border-gray-200 pb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 <%= icon_bg_class(:auditor) %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            Личная информация
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div>
              <%= f.label :last_name, t('views.devise.registrations.last_name', default: 'Фамилия'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :last_name, autocomplete: "family-name",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :first_name, t('views.devise.registrations.first_name', default: 'Имя'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :first_name, autocomplete: "given-name",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :second_name, t('views.devise.registrations.second_name', default: 'Отчество'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :second_name, autocomplete: "additional-name",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm" %>
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
            <div>
              <%= f.label :email, t('views.devise.sessions.email', default: 'Email'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.email_field :email, autocomplete: "email",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm" %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p class="mt-2 text-sm text-amber-600">
                  Ожидается подтверждение: <%= resource.unconfirmed_email %>
                </p>
              <% end %>
            </div>

            <div>
              <%= f.label :position, t('views.devise.registrations.position', default: 'Должность'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :position, autocomplete: "organization-title",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm" %>
            </div>
          </div>

          <div class="mt-4">
            <div class="flex items-center">
              <%= f.check_box :main_auditor, class: "h-5 w-5 #{checkbox_class(:auditor)} rounded border-gray-300 focus:ring-2 #{checkbox_class(:auditor)}" %>
              <%= f.label :main_auditor, t('views.devise.registrations.main_auditor', default: 'Главный аудитор'), class: "ml-3 block text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </div>

        <!-- Password Change Section -->
        <div class="border-b border-gray-200 pb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 <%= icon_bg_class(:auditor) %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            Смена пароля
          </h2>
          <p class="text-sm text-gray-600 mb-4">
            Оставьте поля пустыми, если не хотите менять пароль
          </p>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :password, t('views.devise.sessions.password', default: 'Новый пароль'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
                  placeholder: "••••••••" %>
              <% if @minimum_password_length %>
                <p class="mt-2 text-xs text-gray-500">
                  Минимум <%= @minimum_password_length %> символов
                </p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, t('views.devise.registrations.password_confirmation', default: 'Подтверждение пароля'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:auditor)} transition-colors duration-200 sm:text-sm",
                  placeholder: "••••••••" %>
            </div>
          </div>
        </div>

        <!-- Current Password Section -->
        <div class="bg-amber-50 rounded-lg p-4 border border-amber-200">
          <h3 class="text-sm font-semibold text-amber-900 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            Подтверждение изменений
          </h3>
          <%= f.label :current_password, t('views.devise.registrations.current_password', default: 'Текущий пароль'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors duration-200 sm:text-sm",
              placeholder: "••••••••" %>
          <p class="mt-2 text-xs text-amber-700">
            Введите текущий пароль для подтверждения изменений
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between pt-4">
          <div>
            <%= link_to cabinet_auditors_dashboard_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Назад
            <% end %>
          </div>

          <%= f.submit t('views.devise.registrations.edit.submit', default: 'Сохранить изменения'),
              class: "#{button_class(:auditor)} ml-2 inline-flex items-center" %>
        </div>
      <% end %>

      <!-- Delete Account Section -->
      <div class="bg-red-50 border-t border-red-200 px-8 py-6">
        <h3 class="text-lg font-semibold text-red-900 mb-2">Удаление аккаунта</h3>
        <p class="text-sm text-red-700 mb-4">
          После удаления аккаунта все данные будут потеряны безвозвратно
        </p>
        <%= button_to "Удалить мой аккаунт",
            registration_path(resource_name),
            data: { turbo_confirm: "Вы уверены? Это действие нельзя отменить!" },
            method: :delete,
            class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
      </div>
    </div>
  </div>
</div>
