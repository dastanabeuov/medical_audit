<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Результаты проверки КЛ</h1>
    <div class="flex gap-3">
      <%= link_to export_cabinet_auditors_reports_path(format: :csv, tab: @tab, search: @search),
          class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Экспорт CSV
      <% end %>
      <%= link_to "Загрузить КЛ", upload_cabinet_auditors_advisory_sheets_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
    </div>
  </div>

  <!-- Табы по статусам -->
  <div class="bg-white rounded-lg shadow">
    <div class="border-b border-gray-200">
      <nav class="flex -mb-px">
        <%= link_to cabinet_auditors_advisory_sheets_path(tab: "all"), 
            class: "px-6 py-4 text-sm font-medium #{@tab == 'all' ? 'border-b-2 border-blue-500 text-blue-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          Все
        <% end %>
        <%= link_to cabinet_auditors_advisory_sheets_path(tab: "purple"), 
            class: "px-6 py-4 text-sm font-medium #{@tab == 'purple' ? 'border-b-2 border-purple-500 text-purple-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          <span class="inline-block w-3 h-3 bg-purple-500 rounded-full mr-2"></span>Не удалось проверить
        <% end %>
        <%= link_to cabinet_auditors_advisory_sheets_path(tab: "red"), 
            class: "px-6 py-4 text-sm font-medium #{@tab == 'red' ? 'border-b-2 border-red-500 text-red-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          <span class="inline-block w-3 h-3 bg-red-500 rounded-full mr-2"></span>Не соответствует
        <% end %>
        <%= link_to cabinet_auditors_advisory_sheets_path(tab: "yellow"), 
            class: "px-6 py-4 text-sm font-medium #{@tab == 'yellow' ? 'border-b-2 border-yellow-500 text-yellow-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          <span class="inline-block w-3 h-3 bg-yellow-500 rounded-full mr-2"></span>Частичное
        <% end %>
        <%= link_to cabinet_auditors_advisory_sheets_path(tab: "green"), 
            class: "px-6 py-4 text-sm font-medium #{@tab == 'green' ? 'border-b-2 border-green-500 text-green-600' : 'text-gray-500 hover:text-gray-700'}" do %>
          <span class="inline-block w-3 h-3 bg-green-500 rounded-full mr-2"></span>Соответствует
        <% end %>
      </nav>
    </div>

    <!-- Поиск -->
    <div class="p-4 border-b border-gray-200">
      <%= form_with url: cabinet_auditors_advisory_sheets_path, method: :get, class: "flex gap-4" do |f| %>
        <%= hidden_field_tag :tab, @tab %>
        <%= f.text_field :search, value: @search, placeholder: "Поиск по номеру записи или содержимому...", 
            class: "flex-1 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        <%= f.submit "Найти", class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 cursor-pointer" %>
      <% end %>
    </div>

    <!-- Таблица результатов -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Номер записи</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Результат</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дата</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @sheets.each do |sheet| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-block w-4 h-4 rounded-full" style="background-color: <%= sheet.status_color %>"></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= sheet.recording %></td>
              <td class="px-6 py-4 text-sm text-gray-500 max-w-md truncate"><%= truncate(sheet.verification_result, length: 100) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= sheet.verified_at&.strftime("%d.%m.%Y %H:%M") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "Подробнее", cabinet_auditors_advisory_sheet_path(sheet), class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @sheets.empty? %>
      <div class="p-8 text-center text-gray-500">Нет записей для отображения</div>
    <% end %>

    <div class="px-6 py-4 border-t border-gray-200">
      <%= paginate @sheets %>
    </div>
  </div>
</div>
