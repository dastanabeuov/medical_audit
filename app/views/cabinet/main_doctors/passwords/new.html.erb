<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <div class="<%= icon_bg_class(:main_doctor) %> w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
          <%= scope_icon_svg(:main_doctor) %>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          <%= t('devise.passwords.new.title', default: 'Забыли пароль?') %>
        </h2>
        <p class="text-sm text-gray-600">
          <%= t('devise.passwords.new.subtitle', default: 'Введите ваш email для восстановления пароля') %>
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "cabinet/main_doctors/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, t('views.devise.sessions.email', default: 'Email'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 #{input_focus_class(:main_doctor)} transition-colors duration-200 sm:text-sm",
              placeholder: "name@example.com" %>
        </div>

        <div>
          <%= f.submit t('devise.passwords.new.submit', default: 'Отправить инструкции'), class: button_class(:main_doctor) %>
        </div>
      <% end %>

      <%= render "cabinet/main_doctors/shared/links" %>
    </div>

    <p class="text-center text-xs text-gray-500 mt-4">
      <%= t('views.devise.footer', default: '© 2025 Medical Audit System') %>
    </p>
  </div>
</div>
