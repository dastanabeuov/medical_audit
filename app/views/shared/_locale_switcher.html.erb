<div class="relative" data-controller="dropdown">
  <button
    type="button"
    data-action="click->dropdown#toggle"
    class="flex items-center space-x-2 px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition"
  >
    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span><%= t("views.locale.languages.#{I18n.locale}") %></span>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <div
    data-dropdown-target="menu"
    class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg z-50 overflow-hidden"
  >
    <div class="py-1">
      <% I18n.available_locales.each do |locale| %>
        <% is_active = I18n.locale == locale %>
        <%= button_to switch_locale_path(locale),
          method: :post,
          class: "w-full text-left px-4 py-2 text-sm flex items-center justify-between hover:bg-gray-100 transition #{is_active ? 'bg-blue-50 text-blue-700' : 'text-gray-700'}",
          data: { turbo: false } do %>
          <span class="flex items-center space-x-2">
            <span><%= t("views.locale.languages.#{locale}") %></span>
          </span>
          <% if is_active %>
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
