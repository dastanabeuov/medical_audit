<div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 p-4 space-y-2 w-full max-w-md">
  <% if flash.any? %>
    <% flash.each do |key, message| %>
      <div 
        data-controller="flash" 
        data-flash-target="message"
        class="relative flex items-center justify-between p-4 rounded-2xl text-sm shadow-md transition-all duration-300 animate-fade-in-down
              <%= case flash_key(key)
                    when 'alert-success' then 'bg-green-100 text-green-800 border border-green-200'
                    when 'alert-info' then 'bg-blue-100 text-blue-800 border border-blue-200'
                    when 'alert-warning' then 'bg-yellow-100 text-yellow-800 border border-yellow-200'
                    when 'alert-danger' then 'bg-red-100 text-red-800 border border-red-200'
                    else 'bg-gray-100 text-gray-800 border border-gray-200'
                  end %>">
        <span><%= message %></span>
      </div>
    <% end %>
    <% flash.clear %>
  <% end %>
</div>
